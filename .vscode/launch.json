{
    "version": "1.0.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Albatros version [Chrome]",
            "url": "https://albatros.prx",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Vite + React [Chrome]",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to existing Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}